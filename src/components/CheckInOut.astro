<section class="mt-16 w-full">
    <article class="flex flex-col m-auto items-center w-4/5">
        <h1 class="uppercase text-title text-secondary font-bold text-center">
            Consulta tu disponibilidad
        </h1>

        <div class="flex items-center justify-center sm:w-4/5 w-full">
            <div class="flex md:flex-row flex-col sm:w-auto w-full sm:h-30 h-full sm:mt-16 mt-8 bg-primary items-center justify-center sm:gap-20 mx-10px">
                <form class="flex sm:flex-row flex-col items-center justify-center sm:gap-20 gap-5 my-12 sm:my-0 sm:ml-10">
                    <div class="flex flex-col items-center justify-center gap-2">
                        <div class="flex justify-center items-center gap-3">
                            <i class="fa-solid fa-person-walking-arrow-right text-white text-mparrafo"></i>
                            <label for="checkin" class="text-white text-mparrafo">
                                Check In
                            </label>
                        </div>

                        <input id="checkin" type="date" name="check-in" value="" min="today" class="btn-checkinout text-secondary" required>
                    </div>                   
                    
                    <div class="flex flex-col items-center justify-center gap-2">
                        <div class="flex justify-center items-center gap-3">
                            <i class="fa-solid fa-person-walking-arrow-loop-left text-white text-mparrafo"></i>
                            <label for="checkout" class="text-white text-mparrafo">
                                Check Out
                            </label>
                        </div>

                        <input id="checkout" type="date" name="check-out" value="" min="today" class="btn-checkinout text-secondary" required>
                    </div>

                    <div class="flex flex-col items-center justify-center gap-2">
                        <div class="flex justify-center items-center gap-3">
                            <i class="fa-solid fa-bed text-white text-mparrafo"></i>
                            <label for="pax" class="text-white text-mparrafo">
                                Huespedes
                            </label>
                        </div>

                        <select name="pax" id="pax" class="btn-checkinout text-secondary" required>
                            <option value="1" hidden>
                                Personas
                            </option>
                            <option value="1">1 Persona</option>
                            <option value="2">2 Personas</option>
                            <option value="3">3 Personas</option>    
                            <option value="4">4 Personas</option>    
                            <option value="5">5 Personas</option>    
                        </select>
                    </div>
                    
                 
                </form> 

                <button id="consult" onclick="dialog.showModal()" class="sm:mb-0 mb-14 sm:mr-10">
                    Consultar
                </button>
            </div>
        </div>
    </article>

    <article id="blackgroundDialog" class="invisible bg-black/70 flex justify-center items-center w-screen h-screen top-0 left-0 z-1000 fixed transition-all duration-50 ease-in-out">
        <dialog id="dialog" class=" bg-white sm:w-1/2 w-full z-50 fixed justify-center items-center pt-9 m-auto transition-all duration-500 ease-in-out">
            <div class="flex justify-center items-center">  
                <div class="container-dialog flex flex-col items-center sm:w-4/5 h-auto">
                    <div class="pagination flex justify-center itmes-start gap-4">
                        <div id="circle-active" class="circle-active circles">
                            <h1>1</h1>
                        </div>

                        <div id="separatorPagination" class="circle-inactive border-1 border-primary h-0 w-[100px] mt-4"></div>

                        <div id="circle-inactive" class="circle-inactive circles">
                            <h1>2</h1>
                        </div>
                    </div>

                    <div class="pages pageOne dialog-active mt-8">
                        <div class="flex flex-col items-center gap-7 w-4/5 mx-8">
                            <h1 class="text-center font-bold text-[24px] mx-8">
                            Tus datos de reserva son los siguiente:
                        </h1>
                        </div>
                    
                        <div class="flex flex-col items-center gap-7 mt-7">
                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-person-walking-arrow-right text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Fecha de ingreso: 
                                    </p>
                                </div>
                                <span id="spanCheckIn" class="text-secondary text-secondtitle"></span>
                            </div>

                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-person-walking-arrow-loop-left text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Fecha de salida: 
                                    </p>
                                </div>
                                <span id="spanChekOut" class="text-secondary text-secondtitle"></span>
                            </div>

                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-bed text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Cantidad de huspedes: 
                                    </p>
                                </div>
                                
                                <div class="flex items-center gap-2">
                                    <span id="spanPax" class="text-secondary text-secondtitle"></span>
                                
                                    <p class="text-secondary text-secondtitle">
                                        Personas
                                    </p>
                                </div>
                            </div>
                            
                            <div class="container-botones flex sm:flex-row flex-col justify-center items-center gap-7 mb-10 w-4/5 mx-8">
                                <button id="closePageOne" onclick="dialog.close()">Regresar</button>
                                <button class="nextPage">Siguiente</button>
                            </div>
                        </div>
                    </div>

                    <div class="pages PageTwo dialog-inactive mt-8 mx-8">
                        <h1 class="text-center font-bold text-[24px]">
                            Tu valor a pagar es el siguiente:
                        </h1>
                    
                        <div class="flex flex-col items-center gap-7 mt-7">
                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-bed text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Valor por hospedaje total: 
                                    </p>
                                </div>

                                <p class="text-secondary text-secondtitle">
                                    $
                                    <span id="spanCost" class="text-secondary text-secondtitle"></span>
                                     USD
                                </p>
                            </div>

                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-calculator text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Valor por impuestos: 
                                    </p>
                                </div>
                                
                                <p
                                    class="text-secondary text-secondtitle">
                                    $
                                    <span id="spanTax" class="text-secondary text-secondtitle"></span>
                                     USD
                                </p>
                            </div>

                            <div class="flex flex-col justify-center items-center gap-3">
                                <div class="flex justify-center items-center gap-3">
                                    <i class="fa-solid fa-circle-dollar-to-slot text-secondary text-parrafo"></i>
                                    <p class="text-secondary font-bold text-parrafo">
                                        Valor total a pagar: 
                                    </p>
                                </div>
                                <p class="text-secondary text-secondtitle">
                                    $ 
                                    <span id="spanTotal" class="text-secondary text-secondtitle"></span>
                                     USD
                                </p>
                            </div>
                            
                            <div class="container-botones flex justify-center items-center gap-7 mb-10">
                                <button id="sendReservation" onclick="dialog.close()" class="sentReservation">Realizar Reserva</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </dialog>
    </article>
</section>

<script src="../assets/js/dialogReservation.js"></script>

